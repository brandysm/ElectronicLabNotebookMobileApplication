<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.brandysm.electroniclabnotebook.mobileapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ElectronicLabNotebookMobileApplication">
        <activity
            android:name=".shareproject.ShareProjectActivity"
            android:exported="false"
            android:label="@string/title_share_project"/>
        <activity
            android:name=".experiment.ExperimentActivity"
            android:exported="false"
            android:label="@string/title_experiment" />
        <activity
            android:name=".project.ProjectActivity"
            android:exported="false"
            android:label="@string/title_project" />
        <activity
            android:name=".recorder.RecorderActivity"
            android:exported="false"
            android:label="@string/title_recorder" />
        <activity
            android:name=".timer.TimerActivity"
            android:exported="false"
            android:label="@string/title_timer" />
        <activity
            android:name=".alarm.AlarmActivity"
            android:exported="false"
            android:label="@string/title_alarm" />
        <activity
            android:name=".note.NoteActivity"
            android:exported="false"
            android:label="@string/title_note" />
        <activity
            android:name=".biometric.BiometricActivity"
            android:exported="false"
            android:label="@string/title_activity_biometric" />
        <activity
            android:name=".home.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>